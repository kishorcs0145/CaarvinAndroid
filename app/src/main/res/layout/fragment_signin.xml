<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_10sdp"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/loginbg"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:text="Sign In"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:text="I have account already"
            android:textSize="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="wrap_content"></TextView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/button3bg"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_height="@dimen/_40sdp">

            <ImageView
                android:layout_width="@dimen/_23sdp"
                android:src="@drawable/usering"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/userImage"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_centerHorizontal="true"
                android:layout_height="@dimen/_23sdp" />
            <EditText

                android:layout_width="match_parent"
                android:background="#FFFFFF"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text=""
                android:gravity="left|center"
                android:inputType="textEmailAddress"
                android:hint="Email Id"
                android:textSize="@dimen/_12sdp"
                android:layout_toRightOf="@id/userImage"
                android:id="@+id/username"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_height="@dimen/_35sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/button3bg"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_height="@dimen/_40sdp">

            <ImageView
                android:layout_width="@dimen/_23sdp"
                android:src="@drawable/pswdimg"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/passImage"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_centerHorizontal="true"
                android:layout_height="@dimen/_23sdp" />
            <EditText

                android:layout_width="match_parent"
                android:background="#FFFFFF"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_12sdp"
                android:text=""
                android:hint="Password"
                android:gravity="left|center"
                android:layout_marginRight="@dimen/_2sdp"
                android:inputType="textPassword"
                android:layout_toRightOf="@id/passImage"
                android:id="@+id/password"
                android:layout_height="@dimen/_35sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rytLogin"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@color/loginbt"
            android:layout_height="@dimen/_40sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/_5sdp"
                android:id="@+id/lblLogin"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:text="LOGIN"
                />


        </RelativeLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>